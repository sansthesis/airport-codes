// Background photos

// 404
.lost
  background-image: url(images/starwars.gif)

// About
.about
  background-image: url(images/airplane.gif)

// Contribute
.contribute
  @media (max-width: 700px)
    background-image: url(images/conair-small.jpg)
  @media (min-width: 701px)
    background-image: url(images/conair.jpg)

$media-sm-max = 700px
$media-md-max = 1500px

// Cards
.card

  for $code in $images
    &.{$code}
      .background { background-image: url($card/$code.$image-ext) }

// Detail Card
@media (max-width: 900px)
  .detail

    for $code in $images
      &.{$code} .detail-bg { background-image: url($card/$code.$image-ext) }

// Detail Medium
@media (min-width: 901px)
  .detail

    for $code in $images
      &.{$code} .detail-bg { background-image: url($medium/$code.$image-ext) }

// Special case for PRN
.card.prn
  .background
    background-image: url('/images/card/prnx.jpg')
@media (max-width: $media-sm-max)
  .detail.prn { background-image: url('/images/small/prnx.jpg') }
@media (min-width: $media-sm-max + 1px) and (max-width: $media-md-max)
  .detail.prn { background-image: url('/images/medium/prnx.jpg') }
@media (min-width: $media-md-max + 1px)
  .detail.prn { background-image: url('/images/large/prnx.jpg') }

